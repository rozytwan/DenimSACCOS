
@{
    ViewBag.Title = "Downloads";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@model List<string>
<h2><strong><u>List Of Available Files</u></strong></h2>
<table border="1" width="400" height="300" style="font:bold 15px large,verdana">

    <tr>
        <th><h3>File Name</h3></th>

        <td></td>
        <th width="100"><u>Action</u></th>

    </tr>
    @for (var i = 0; i <= Model.Count - 1; i++)
    {
        <tr>
            <td>@Model[i].ToString() </td>

            <td></td>
            <td>@Html.ActionLink("Delete", "Delete", new { ImageName = @Model[i].ToString() }, new { onclick = "return confirm('Are you sure you wish to delete this article?');" }) </td>
        </tr>
    }
</table>
<br />
@Html.ActionLink("Insert New Files", "Index") 

